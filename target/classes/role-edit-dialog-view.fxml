<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oraclehibernate.Controllers.RoleEditDialogController">
    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab onSelectionChanged="#sysPrivsHandler" text="System Privileges">
                    <content>
                        <TableView fx:id="sysPrivTable" prefHeight="200.0" prefWidth="200.0">
                            <columns>
                                <TableColumn fx:id="sysPrivsName" prefWidth="296.00000610351526" text="Privileges" />
                                <TableColumn fx:id="grantSysPriv" minWidth="0.0" prefWidth="96.79998779296875" text="Grant" />
                        <TableColumn fx:id="withAdminSysPriv" minWidth="0.0" prefWidth="107.20001220703125" text="With Admin" />
                            </columns>
                        </TableView>
                    </content>
                </Tab>
                <Tab onSelectionChanged="#tabPrivsHandler" text="Object Privileges">
                    <content>
                        <TableView prefHeight="200.0" prefWidth="200.0">
                            <columns>
                                <TableColumn prefWidth="287.2000183105465" text="Privileges" />
                                <TableColumn prefWidth="105.5999755859375" text="Granted" />
                                <TableColumn prefWidth="107.20001220703125" text="With Grant" />
                            </columns>
                        </TableView>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <bottom>
        <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="10.0">
            <children>
                <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#closeHandler" text="Close">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
                <Button fx:id="applyBtn" mnemonicParsing="false" onAction="#applyHandler" text="Apply">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
